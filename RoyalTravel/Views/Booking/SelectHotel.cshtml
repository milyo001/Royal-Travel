@{
    ViewData["Title"] = "Hotel";
}

@model RoyalTravel.ViewModels.Booking.SelectedHotelViewModel


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

</head>

<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h5 class="text-center">
                    Welcome to @Model.HotelName by Royal Travel
                </h5>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="carousel slide" id="carousel-493320">
                    <ol class="carousel-indicators">
                        <li data-slide-to="0" data-target="#carousel-493320" class="active">
                        </li>
                        <li data-slide-to="1" data-target="#carousel-493320">
                        </li>
                        <li data-slide-to="2" data-target="#carousel-493320">
                        </li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" alt="Carousel Bootstrap First" src="https://cdn.pixabay.com/photo/2018/06/18/10/57/bedroom-3482283_1280.jpg">
                            <div class="carousel-caption">
                                <h4>
                                </h4>
                                <p>

                                </p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" alt="Carousel Bootstrap Second" src="https://cdn.pixabay.com/photo/2014/07/10/17/17/hotel-389256_1280.jpg">
                            <div class="carousel-caption">
                                <h4>
                                </h4>
                                <p>
                                </p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" alt="Carousel Bootstrap Third" src="https://cdn.pixabay.com/photo/2014/05/18/19/15/walkway-347319_1280.jpg">
                            <div class="carousel-caption">
                                <h4>
                                </h4>
                                <p>
                                </p>
                            </div>
                        </div>
                    </div> <a class="carousel-control-prev" href="#carousel-493320" data-slide="prev"><span class="carousel-control-prev-icon"></span> <span class="sr-only">Previous</span></a> <a class="carousel-control-next" href="#carousel-493320" data-slide="next"><span class="carousel-control-next-icon"></span> <span class="sr-only">Next</span></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-center">
                    Amenities
                </h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="card text-white text-center bg-primary ">
                    <h5 class="card-header">
                        Wi-Fi: @Model.WiFi
                    </h5>
                    <div class="card-body">
                        <p class="card-text">
                            Pet Friendly: @Model.AllowPets
                        </p>
                    </div>
                    <div class="card-footer">
                        Local Shuttle service: @Model.LocalShuttle
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white text-center bg-primary">
                    <h5 class="card-header">
                        Free Breakfast: @Model.Breakfast
                    </h5>
                    <div class="card-body">
                        <p class="card-text">
                            Pool: @Model.Pool
                        </p>
                    </div>
                    <div class="card-footer">
                        Airport Shuttle Service: @Model.AirportShuttle
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white text-center bg-primary">
                    <h5 class="card-header">
                        Parking: @Model.Parking
                    </h5>
                    <div class="card-body">
                        <p class="card-text">
                            Fitness center: @Model.FitnessCenter
                        </p>
                    </div>
                    <div class="card-footer">
                        Restaurant On-site: @Model.Restaurant
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <h2 class="text-center">
                    Property Info:
                </h2>
                <p>
                    @Model.Information
                </p>

            </div>
            <div class="col-md-4">

                <h2 class="text-center">
                    Detailed description:
                </h2>
                <p>
                    @Model.Description
                </p>

            </div>
            <div class="col-md-4">
                <address>
                    <br> @Model.Address <br><abbr title="Phone">+359 8004577895</abbr>
                </address>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>


    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/scripts.js"></script>
</body>


