<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap 4 DatePicker</title>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />

    <style>
        
        .parent{
            text-align: center;
        }
    </style>

</head>
<body>
    <div class="parent">
    <div class="row">
        <div class="col">
            <label for="destination">Destination</label>
            <input class="form-control" id="destination" width="276" placeholder="Enter City" required />
        </div>
        <div class="col">
            <label for="datepicker">Check in</label>
            <input id="datepicker" width="220" />
        </div>
        <div class="col">
            <label for="datepicker2">Check out</label>
            <input id="datepicker2" width="220" />
        </div>
        <div class="col">
            <label for="adults">Adults</label>
            <select class="form-control" id="adults" width="276">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
            </select>
        </div>
        <div class="col">
            <label for="kids">Children</label>
            <select class="form-control" id="kids" width="276">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
            </select>
        </div>
    </div>
    </div>
    <div style="margin-top:24px" class="row">
        <button type="button" class="btn btn-primary btn-lg btn-block">Check Availability</button>
    </div>
   
    <script>
        $('#datepicker').datepicker({
            uiLibrary: 'bootstrap4'
        });
        $('#datepicker2').datepicker({
            uiLibrary: 'bootstrap4'
        });
    </script>
</body>
</html>